{
  "name": "@acme/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env tsc",
    "clean": "git clean -xdf dist .turbo node_modules",
    "watch": "pnpm with-env nodemon",
    "dev": "pnpm watch",
    "dev:android": "pnpm watch",
    "dev:ios": "pnpm watch",
    "dev:web": "pnpm watch",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 eslint",
    "lint:fix": "pnpm lint --fix",
    "start": "pnpm with-env nodemon",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@acme/api": "*",
    "@acme/auth": "*",
    "@acme/db": "*",
    "@acme/validator": "*",
    "@fastify/cors": "^8.3.0",
    "@trpc/server": "^10.18.0",
    "fastify": "^4.17.0",
    "superjson": "1.9.1",
    "trpc-panel": "^1.3.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "*",
    "@types/node": "^18.15.10",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
