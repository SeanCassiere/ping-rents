{
  "name": "@acme/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env tsc",
    "clean": "git clean -xdf dist .turbo node_modules",
    "dev": "pnpm with-env nodemon",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 eslint",
    "lint:fix": "pnpm lint --fix",
    "start": "pnpm with-env node ./dist/index.js",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@acme/api": "*",
    "@acme/auth": "*",
    "@acme/db": "*",
    "@trpc/server": "^10.18.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "superjson": "1.9.1",
    "trpc-panel": "^1.2.8",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "*",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.10",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
