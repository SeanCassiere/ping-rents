{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push-force": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "dev:ios": {
      "persistent": true,
      "cache": false
    },
    "dev:android": {
      "persistent": true,
      "cache": false
    },
    "dev:web": {
      "persistent": true,
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build:web": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", ".expo/**", "dist/**", "web-build/**"]
    },
    "@acme/date-fns#build": {},
    "@acme/validator#build": {
      "dependsOn": ["@acme/date-fns#build"]
    },
    "@acme/auth#build": {
      "dependsOn": ["@acme/validator#build", "@acme/date-fns#build"]
    },
    "@acme/api#build": {
      "dependsOn": [
        "@acme/date-fns#build",
        "@acme/validator#build",
        "@acme/auth#build"
      ]
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", ".expo/**", "dist/**", "web-build/**"]
    },
    "lint": {},
    "lint:fix": {},
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  },
  "globalEnv": [
    "CI",
    "DATABASE_URL",
    "EXPO_ROUTER_APP_ROOT",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "VERCEL",
    "VERCEL_URL",
    "JWT_SECRET",
    "PORT",
    "SERVER_HOST",
    "PUBLIC_API_URL",
    "SENDGRID_API_KEY",
    "SENDGRID_FROM_EMAIL"
  ]
}
